<div class="container mx-auto py-16">
    <ul role="list" class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-4 sm:gap-x-6 lg:grid-cols-5 xl:gap-x-8">
        <% @properties.each do |property| %>
            <li class="relative">
                <div class="group block w-full aspect-w-10 aspect-h-7 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
                    <button type="button" class="absolute inset-0 focus:outline-none">
                        <span class="sr-only">View details for IMG_4985.HEIC</span>
                    </button>
                </div>
                <p class="mt-2 block text-sm font-medium text-gray-900 truncate pointer-events-none"><%= property.city %>, <%= property.state %>, <%= property.country %> </p>
                <p class="block text-sm font-medium text-gray-500 pointer-events-none">5,000 km away</p>
                <p class="block text-sm font-medium text-gray-500 pointer-events-none">Jan 3 - 8</p>
                <p class="block text-sm font-medium text-gray-500 pointer-events-none">$150 per night</p>
            </li>
        <% end %>
    </ul>
</div>